<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewNameStyle">
        <item name="android:layout_width">@dimen/list_name_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/list_name_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewYearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/list_year_text_size</item>
    </style>

    <style name="ImageViewThumbnailStyle">
        <item name="android:layout_width">@dimen/list_thumbnail_width</item>
        <item name="android:layout_height">@dimen/list_thumbnail_height</item>
        <item name="android:layout_marginLeft">@dimen/list_thumbnail_margin</item>
        <item name="android:layout_marginStart">@dimen/list_thumbnail_margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
